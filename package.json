{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^4.2.5",
    "lerna": "^6.4.1",
    "lerna-dockerize": "^1.0.4",
    "lint-staged": "^10.2.9",
    "prettier": "^2.8.3",
    "prettier-eslint-cli": "^5.0.0"
  },
  "name": "cats",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "dev": "lerna run dev",
    "lerna-dockerize": "lerna-dockerize --template-dockerfile-name Dockerfile.template",
    "lerna-clean": "lerna clean -y",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ./packages --ext .js,.jsx,.ts,.tsx,.css",
    "format": "prettier-eslint \"$PWD/{,!(node_modules)/**/}*.{js,json}\"",
    "prettier": "prettier --write .",
    "format:fix": "prettier-eslint --write \"$PWD/{,!(node_modules)/**/}*.{js,json}\""
  }
}
